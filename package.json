    "@testing-library/react-hooks": "^5.0.3",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.4.1",
