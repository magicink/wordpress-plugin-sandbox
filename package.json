{
  "name": "wordpress-plugin-sandbox",
  "version": "1.0.0",
  "description": "A sandbox for developing WordPress plugins",
  "keywords": [],
  "license": "UNLICENSED",
  "author": {
    "name": "Brandon Tom",
    "email": "magicink@gmail.com"
  },
  "main": "index.php",
  "scripts": {
    "build": "npx rimraf build/ && webpack serve --config ./webpack.config.js --mode development",
    "format": "prettier --write \"./**/*.{js,json,md,php}\"",
    "hook:precommit": "npm run format && git add .",
    "preinstall": "npx rimraf .husky",
    "prepare": "husky install",
    "postprepare": "npx husky add .husky/pre-commit \"npm run hook:precommit\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/plugin-transform-arrow-functions": "^7.13.0",
